name: htt-ml
conda-env: conda.yaml
entry_points:
  multi:
    parameters:
      year: {type: str, default: "2018"}
      train_file: {type: str, default: "data/2018/multi/skims/train.hdf5"}
      test_file: {type: str, default: "data/2018/multi/skims/test.hdf5"}
      input_pipe_file: {type: str, default: "data/2018/multi/skims/input_pipe.pkl"}
      logo_feature: {type: str, default: "evt"}
      n_splits: {type: int, default: 2}
      num_iterations: {type: int, default: 10}
      weight_name: {type: int, default: "w_cp"}
    command: "python train.py year={year} \
                              train_file={train_file} \
                              test_file={test_file} \
                              input_pipe_file={input_pipe_file} \
                              logo_feature={logo_feature} \
                              n_splits={n_splits} \
                              model_param.num_iterations={num_iterations} \
                              weight_name={weight_name}"
  binary:
    parameters:
      year: {type: str, default: 2018}
      num_iterations: {type: int, default: 10}
    command: "python train.py year={year} \
                              model_param.objective=binary \
                              ~model_param.num_class \
                              model_param.metric=[auc,binary_error,binary_logloss] \
                              model_param.num_iterations={num_iterations}"
